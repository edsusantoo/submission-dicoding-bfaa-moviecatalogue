<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- change color ripple bottom navigation -->
        <item name="colorControlHighlight">@color/rippleBottomNavigation</item>
    </style>

    <!--Color Selected Radio Button -->
    <style name="RadioButtonGreen" parent="AppTheme">
        <item name="colorAccent">@color/colorSelectedTab</item>
    </style>

    <!-- SearchView Style -->
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/round_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

</resources>
